{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "name": {
        "type": "string"
      },
      "hostingPlanName": {
        "type": "string"
      },
      "location": {
        "type": "string"
      },
      "appInsightsName": {
        "type": "string",
        "defaultValue": ""
      },
       "hostingEnvironment": {
        "type": "string",
        "defaultValue": ""
      },
      "tags": {
        "type": "object"
      }
    },
    "variables": {
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms',parameters('hostingPlanName')))]": "empty"
      },
      "appInsightsRG":"[resourceGroup().name]",
      "combinedTags": "[union(parameters('tags'),variables('tags'))]"
    },
    "resources": [
      {
        "apiVersion": "2018-02-01",
        "name": "[parameters('name')]",
        "type": "Microsoft.Web/sites",
        "tags": "[variables('combinedTags')]",
        "identity": {
          "type": "SystemAssigned"
        },
        "properties": {
          "siteConfig": {
          "appSettings": [
            {
              "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
            "value": "[reference(resourceId(variables('appInsightsRG'), 'microsoft.insights/components', parameters('appInsightsName')), '2015-05-01').InstrumentationKey]"
            }],
          "name": "[parameters('name')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms',parameters('hostingPlanName'))]",
          "hostingEnvironment": "[parameters('hostingEnvironment')]"
        },
        "location": "[parameters('location')]"
      }
      }
    ],
    "outputs": {
      "principalId": {
        "type": "string",
        "value": "[reference(resourceId('Microsoft.Web/sites', parameters('name')), '2018-02-01', 'Full').identity.principalId]"
      },
      "endpoint": {
        "type": "string",
        "value": "[concat(parameters('name'),'.azurewebsites.net')]"
      }
    }
  }
